---
import * as m from "@/paraglide/messages";
---
<section class="relative h-screen w-full">
  {/* Background Layer */}
  <div class="absolute inset-0 overflow-hidden">
    <div 
      class="h-full w-full bg-[url('/dager-2.webp')] bg-cover bg-fixed bg-center" 
      style="transform: scale(1.1);"
    />
    <div 
      class="absolute inset-0 bg-gradient-to-br from-purple-900/90 to-indigo-900/90 mix-blend-multiply"
    />
  </div>

  {/* Content Layer */}
  <div class="relative flex h-full items-center justify-center px-4">
    <div class="text-center">
      <div class="mx-auto mb-8 size-40">
        <div class="relative h-full w-full overflow-hidden rounded-full border-4 border-white/10 shadow-2xl">
          <img 
            src="/dager-hero.webp" 
            alt="Dot Dager" 
            class="size-full object-cover"
          />
        </div>
      </div>
      <h1 class="mb-2 font-serif text-5xl font-bold tracking-tight text-white sm:text-6xl">
        {m.heroTitle()}
      </h1>
      <p class="mx-auto max-w-xl text-xl text-zinc-200">
        {m.heroSubtitle()}
      </p>
    </div>
  </div>

  {/* Scroll Indicator */}
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <div class="flex animate-bounce items-center gap-2 text-white/80">
      <span class="text-sm">{m.heroScroll()}</span>
    </div>
  </div>
</section>